        <mtbDays>1.13</mtbDays>
        <maxThreatBigIntervalDays>4</maxThreatBigIntervalDays>
				<minIncChancePopulationIntentFactor>0.2</minIncChancePopulationIntentFactor>
				<categoryWeights>
					<Misc>3</Misc>
					<OrbitalVisitor>4,5</OrbitalVisitor>
					<ShipChunkDrop>2</ShipChunkDrop>
					<AllyArrival>2</AllyArrival>
					<AllyAssistance>0.5</AllyAssistance>
					<ThreatSmall>5</ThreatSmall>
					<ThreatBig>4</ThreatBig>
				</categoryWeights>
			</li>
			<li Class="StorytellerCompProperties_ThreatCycle">
				<minDaysPassed>2</minDaysPassed>
        <mtbDaysThreatSmall>2</mtbDaysThreatSmall>
        <mtbDaysThreatBig>2</mtbDaysThreatBig>
        <threatOffDays>2.0</threatOffDays>
        <threatOnDays>4.0</threatOnDays>
        <minDaysBetweenThreatBigs>2</minDaysBetweenThreatBigs>
			</li>
			<li Class="StorytellerCompProperties_CategoryMTB">
				<allowedTargetTypes>
